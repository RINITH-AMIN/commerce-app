import "./App.css";
import catalog from './products.json';

const ProductCard = ({ product }) => {

  const updateCartCount = () => {
    const initialCount = document.querySelector('.cart-items-count').innerHTML;
    const updatedCount = Number(initialCount) + 1;
    document.querySelector('.cart-items-count').innerHTML = updatedCount;
  }

  return (
    <div className="product-card">
      <div className="product-image">
        <img src={product.imageUrl} alt={product.name} />
      </div>
      <div className="product-details">
        <h2>{product.name}</h2>
        <p>{product.description}</p>
        <div className="ratings">
          {Array(Math.round(product.ratings))
            .fill(null)
            .map((_, index) => (
              <span key={index}>‚≠ê</span>
            ))}
          <span className="total-reviews">{product.totalReviews} reviews</span>
        </div>
        <p className="price">Price: {product.price}</p>
        <input type="text" name="quantity" className="quantity" defaultValue={1} />
        <button className="buy-button" onClick={updateCartCount}>Add to Cart</button>
      </div>
    </div>
  );
};

function App() {

  return (
    <main>
      <header>
        <img
          src="https://apexit.com/wp-content/uploads/2022/02/apexit-white-white2.png"
          height={80}
          width={160}
          alt="logo"
        />
        <div className="cart-section">
          <img
            className="cart-logo"
            src="cart.svg"
            alt="cart"
            width={25}
            height={25}
          />
          <span className="cart-items-count">0</span>
        </div>
      </header>
      <section>
        {catalog.products.map(product=> <ProductCard key={product.name} product={product}/>)}
      </section>
      <footer>
        <ul>
          <li>
            <a href="contact.html">Contact</a>
          </li>
          <li>
            <a href="about.html">About</a>
          </li>
        </ul>
      </footer>
    </main>
  );
}

export default App;
